<Window x:Class="BeaconRelayControlWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="경광등 릴레이 제어 (ICF1058 USB 시리얼)" Height="520" Width="760"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 연결 설정 -->
        <GroupBox Header="연결 설정" Grid.Row="0" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="COM 포트" VerticalAlignment="Center"/>
                <ComboBox x:Name="CmbPorts" Grid.Column="1" Height="28" Margin="8,0,0,0"/>

                <TextBlock Text="Baud" Grid.Column="3" VerticalAlignment="Center"/>
                <TextBox x:Name="TxtBaud" Grid.Column="4" Height="28" Text="115200" Margin="8,0,0,0"/>

                <Button x:Name="BtnRefresh" Grid.Column="6" Content="새로고침" Height="28" Width="90"
                        Click="BtnRefresh_Click"/>

                <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnConnect" Content="연결" Height="28" Width="90"
                            Margin="0,0,8,0" Click="BtnConnect_Click"/>
                    <Button x:Name="BtnDisconnect" Content="해제" Height="28" Width="90"
                            Click="BtnDisconnect_Click" IsEnabled="False"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 명령 모드 -->
        <GroupBox Header="명령 모드" Grid.Row="1" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <RadioButton x:Name="RbHex" Content="HEX 바이트(기본)" IsChecked="True" VerticalAlignment="Center"/>
                <RadioButton x:Name="RbAscii" Content="ASCII 문자열" Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center"/>

                <TextBlock Text="상태:" Grid.Column="3" VerticalAlignment="Center"/>
                <TextBlock x:Name="TxtStatus" Grid.Column="4" Text="미연결" VerticalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </GroupBox>

        <!-- 제어 버튼 -->
        <GroupBox Header="경광등 제어" Grid.Row="2" Padding="12" Margin="0,12,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button x:Name="BtnOn" Content="ON (경광등 켜기)" Width="160" Height="44"
                        Click="BtnOn_Click" IsEnabled="False"/>
                <Button x:Name="BtnOff" Content="OFF (경광등 끄기)" Width="160" Height="44"
                        Margin="12,0,0,0" Click="BtnOff_Click" IsEnabled="False"/>
                <Button x:Name="BtnClearLog" Content="로그 지우기" Width="120" Height="44"
                        Margin="12,0,0,0" Click="BtnClearLog_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- 로그 -->
        <GroupBox Header="로그" Grid.Row="3" Padding="12" Margin="0,12,0,0">
            <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas" FontSize="12"/>
        </GroupBox>
    </Grid>
</Window>
