<Window x:Class="SpeakerTest2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SpeakerTest2" Height="420" Width="780"
        Loaded="Window_Loaded">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 연결 상태 -->
        <TextBlock x:Name="StatusText"
                   Grid.Row="0"
                   Text="장치 상태 확인 중..."
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,12"/>

        <!-- 방송 문구 + 송출 버튼 -->
        <DockPanel Grid.Row="1" LastChildFill="True" Margin="0,0,0,10">
            <Button x:Name="SpeakButton"
                    Content="송출"
                    Width="120"
                    Margin="8,0,0,0"
                    DockPanel.Dock="Right"
                    Click="BtnSpeak_Click"/>
            <TextBox x:Name="MessageBox"
                     Text="안녕하세요"
                     FontSize="14"
                     Height="32"
                     VerticalContentAlignment="Center"/>
        </DockPanel>

        <TextBlock Grid.Row="2" Text="로그:" Margin="0,0,0,4"/>

        <!-- 로그 -->
        <TextBox Grid.Row="3"
                 x:Name="LogBox"
                 IsReadOnly="True"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"/>
    </Grid>
</Window>
